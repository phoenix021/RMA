<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintVertical_chainStyle="packed"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonGroup"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <Button
        android:id="@+id/btnShareAirlines"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share Airlines CSV"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnDownloadAirlines"
        android:backgroundTint="@color/purple_500"
        android:textColor="@android:color/white"
        android:padding="12dp"/>

    <Button
        android:id="@+id/btnDownloadAirlines"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Download Airlines CSV"
        app:layout_constraintTop_toBottomOf="@id/btnShareAirlines"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/match_parent"
        android:backgroundTint="@color/purple_500"
        android:textColor="@android:color/white"
        android:padding="12dp"/>


        <Button
            android:id="@+id/btnDownloadAirports"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Download Airports CSV"
            app:layout_constraintTop_toBottomOf="@id/btnDownloadAirlines"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btnDownloadFlights"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white"
            android:padding="12dp"/>

        <Button
            android:id="@+id/btnDownloadFlights"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Download Flight CSV"
            app:layout_constraintTop_toBottomOf="@id/btnDownloadAirports"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btnDownloadAllCsvs"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white"
            android:padding="12dp"/>


    <Button
        android:id="@+id/btnDownloadAllCsvs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Doanload all the .csv files"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/purple_500"
        android:textColor="@android:color/white"
        android:padding="12dp"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>