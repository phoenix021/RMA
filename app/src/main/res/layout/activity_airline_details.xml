<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white"
    tools:context=".AirlineDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Airport Name & IATA Code -->
        <TextView
            android:id="@+id/tvAirlineName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Airline Name"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvAirlineIATA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IATA Code"
            android:textSize="18sp"
            android:textColor="@color/gray"
            android:layout_marginBottom="16dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"
            android:layout_marginBottom="16dp"/>

        <!-- Airport Details -->
        <TextView
            android:id="@+id/tvCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Country: "
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvCountryIso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Country ISO: "
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvIcaoCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ICAO Code: "
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvDateFounded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DateFounded: "
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvFleetSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fleet size: "
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvFleetAverageAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flight average age: "
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnMoreDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Find more details and book a flight"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>
